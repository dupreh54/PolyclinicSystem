<Window x:Class="PolyclinicWpfApp.AppWindows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicWpfApp.AppWindows"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="400" Width="600" 
        MinHeight="350" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        WindowStyle="None"
        AllowsTransparency="True"
        Icon="\Resources\PolyclinicAppLogo.png"
        >
    <Border CornerRadius="30">
        <Frame x:Name="MainFrame" Background="Transparent" NavigationUIVisibility="Hidden">
            <Frame.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"></Setter>
                </Style>
            </Frame.Resources>
        </Frame>
    </Border>
</Window>
