<Window x:Class="PolyclinicWpfApp.AppWindows.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicWpfApp.AppWindows"
        mc:Ignorable="d" WindowStyle="None" Icon="..\Resources\PolyclinicAppLogo.png"
        Title="Пользовательское окно" Height="1080" Width="1920" MinHeight="1000" MinWidth="960" WindowState="Maximized" Background="Transparent">
    <Grid>
        <Frame x:Name="mainFrame" Background="#FCF3E9" NavigationUIVisibility="Hidden"/>
        <Border x:Name="infoBorder" Visibility="Hidden" CornerRadius="15"
                Background="#FCF3E9" BorderBrush="#0D969B" BorderThickness="2"
                Width="200" Height="150" Grid.Column="1">
            <TextBlock Foreground="#E15246" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="17"
                       Text="Внимание!&#10;Через данный&#10;интерфейс невозможно&#10;авторизоваться&#10;от имени пациента!"
                       TextAlignment="Center" ></TextBlock>
        </Border>
    </Grid>
</Window>
